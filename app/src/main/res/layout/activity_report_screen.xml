<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="l337hax.swaglords.mstruckapp.ReportScreen"
    android:background="#88b4da">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Date And Time"
        android:id="@+id/timeView"
        android:textColor="#FF000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="MS Prime Transportation"
        android:id="@+id/companyNameView"
        android:layout_below="@+id/timeView"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Driver ID"
        android:id="@+id/driverView"
        android:layout_marginTop="25dp"
        android:textColor="#000000"
        android:layout_below="@+id/companyNameView"
        android:layout_alignLeft="@+id/companyNameView"
        android:layout_alignStart="@+id/companyNameView"
        android:layout_marginLeft="21dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/driverInputBox"
        android:layout_below="@+id/driverView"
        android:layout_alignLeft="@+id/companyNameView"
        android:layout_alignStart="@+id/companyNameView"
        android:layout_toLeftOf="@+id/timeView"
        android:layout_toStartOf="@+id/timeView"
        android:background="#f8d6d6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Helper ID"
        android:id="@+id/helperView"
        android:layout_above="@+id/driverInputBox"
        android:layout_alignRight="@+id/companyNameView"
        android:layout_alignEnd="@+id/companyNameView"
        android:textColor="#000000"
        android:layout_marginRight="25dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_below="@+id/helperView"
        android:background="#f9dcdc"
        android:layout_alignRight="@+id/companyNameView"
        android:layout_alignEnd="@+id/companyNameView"
        android:layout_toRightOf="@+id/timeView"
        android:layout_toEndOf="@+id/timeView" />

</RelativeLayout>
