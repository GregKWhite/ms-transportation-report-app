<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="developer.dailyreportapp.ReportScreen"
    android:background="#5ca5e5"
    android:clickable="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="____"
        android:id="@+id/center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#5ca5e5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/submitButton"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date And Time"
        android:id="@+id/timeView"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:layout_alignParentLeft="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="MS Prime Transportation"
        android:id="@+id/companyView"
        android:layout_below="@+id/timeView"
        android:layout_centerHorizontal="true"
        android:textStyle="bold|italic"
        android:textColorHighlight="#eec8c8"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Driver ID"
        android:id="@+id/driverView"
        android:layout_below="@+id/companyView"
        android:textColor="#000000"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="false"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/center"
        android:layout_marginRight="45dp" />

    <EditText
        android:imeOptions="actionDone"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/driverBox"
        android:layout_below="@+id/driverView"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="false"
        android:layout_toLeftOf="@+id/center"
        android:textAlignment="center"
        android:background="#e4ecef"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Helper ID"
        android:id="@+id/helperView"
        android:layout_below="@+id/companyView"
        android:layout_alignParentRight="false"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/center"
        android:layout_marginLeft="42dp" />

    <EditText
        android:imeOptions="actionDone"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/helperBox"
        android:layout_toRightOf="@+id/center"
        android:layout_below="@+id/helperView"
        android:textAlignment="center"
        android:background="#e4ecef"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Truck Number"
        android:id="@+id/textView"
        android:layout_below="@+id/driverBox"
        android:layout_toLeftOf="@+id/center"
        android:textColor="#000000"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp" />

    <EditText
        android:imeOptions="actionDone"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/truckBox"
        android:layout_below="@+id/textView"
        android:layout_toLeftOf="@+id/center"
        android:textAlignment="center"
        android:background="#e4ecef"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Mileage"
        android:id="@+id/mileageView"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/center"
        android:layout_below="@+id/helperBox"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="45dp" />

    <EditText
        android:imeOptions="actionDone"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="number|numberDecimal"
        android:ems="10"
        android:id="@+id/mileageBox"
        android:layout_below="@+id/mileageView"
        android:textAlignment="center"
        android:background="#e4ecef"
        android:layout_toRightOf="@+id/center"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Gallons"
        android:id="@+id/gallonsView"
        android:layout_below="@+id/truckBox"
        android:layout_toLeftOf="@+id/center"
        android:textColor="#000000"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp" />

    <EditText
        android:imeOptions="actionDone"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="number|numberDecimal"
        android:ems="10"
        android:id="@+id/gallonsBox"
        android:layout_below="@+id/gallonsView"
        android:layout_toLeftOf="@+id/center"
        android:textAlignment="center"
        android:background="#e4ecef"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Money Paid"
        android:id="@+id/moneyView"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/center"
        android:layout_below="@+id/mileageBox"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="32dp" />

    <EditText
        android:imeOptions="actionDone"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="number|numberDecimal"
        android:ems="10"
        android:id="@+id/moneyBox"
        android:layout_below="@+id/moneyView"
        android:textAlignment="center"
        android:background="#e4ecef"
        android:layout_toRightOf="@+id/center"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Location"
        android:id="@+id/locationView"
        android:layout_below="@+id/gallonsBox"
        android:layout_toLeftOf="@+id/center"
        android:textColor="#000000"
        android:layout_marginRight="43dp"
        android:layout_marginTop="20dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/locationBox"
        android:layout_below="@+id/locationView"
        android:layout_toLeftOf="@+id/center"
        android:background="#e4ecef"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentBottom="false"
        android:entries = "@array/locations"
        android:layout_alignLeft="@+id/gallonsBox"
        android:spinnerMode="dropdown"
        android:textAlignment="center"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Driver Notes"
        android:id="@+id/noteView"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/center"
        android:layout_below="@+id/moneyBox"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="32dp" />

    <EditText
        android:imeOptions="actionDone"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:ems="10"
        android:id="@+id/notesBox"
        android:layout_below="@+id/noteView"
        android:textAlignment="center"
        android:background="#e4ecef"
        android:layout_toRightOf="@+id/center"
        android:inputType="text" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/debugText"
        android:layout_above="@+id/submitButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:textSize="15dp"
        android:textColor="#000000"
        android:textStyle="bold|italic"
        android:layout_toLeftOf="@+id/submitButton"
        android:layout_marginRight="0dp" />

</RelativeLayout>
